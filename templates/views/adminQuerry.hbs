<!DOCTYPE html>
<html lang="en">


{{>head}}

<body>
    <div class="container">

        <h1 class="text-center my-2 bg-warning py-2 text-white">Payment Dashboard</h1>
        <div class="row justify-content-center mx-auto">
                        <div class="col-5 text-center px-0 mx-1">
                <a href="/admindashboard"><button class="borderless curve py-1 px-3"><i class="fa-solid fa-house "></i> Dashboard</button></a>
            </div>
            <div class="col-5 text-center px-0 mx-1">
                <form action="/adminlogout" method="post">
                    <button class="borderless curve py-1 px-3"> <i class="fas fa-sign-out-alt"></i>  Logout</button>
                </form>
            </div>
        </div>
        <div class="container mt-3 mx-auto px-0 px-md-2 row">
            <div class="col-lg-9 col-12 mx-auto  px-0">
                <form action="/adminquerries" method="post">
                    <div class="row searchbox  py-2 m-auto w-100 shadow rounded-3 ">
                        {{#if searchvalue}}
                        <input class=" col-7 col-lg-9 border-0 " id="searchinput" type="text"
                            placeholder="{{searchvalue}}" name="search" >
                            {{else}}
                        <input class=" col-7 col-lg-9 border-0 " id="searchinput" type="text"
                            placeholder="Search here.." name="search" >
                        {{/if}}
                        <input class=" col-3 col-lg-2 border " id="searchdayinput" type="text"
                            placeholder="{{day}}day" name="day" >
                        <button class="text-center col-2 border-0 bg-white col-lg-1" id="searchbtn"><img class=""
                                src="/images/search.png" type="submit" width="27px" alt=""></button>
                    </div>

                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-11 mx-auto px-0">
                <div class="accordion accordion-flush" id="accordionExample">
                    {{#each data as |data index|}}
                    <div class="accordion-item my-2 shadow ">
                        <h2 class="accordion-header" id="heading{{index}}">
                            <button class="accordion-button " type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse{{index}}" aria-expanded="true"
                                aria-controls="collapse{{index}}">
                                <p class="mb-0"><span class="text-dark h5">{{data.name}}</span><br><span
                                        class="text-secondary text-break"><strong>{{data.email}}</strong></span><br>
                                        <span class="text-secondary">Topic : {{data.topic}}</span>
                                </p>
                            </button>
                        </h2>
                        <div id="collapse{{index}}" class="accordion-collapse collapse show"
                            aria-labelledby="heading{{index}}" data-bs-parent="#accordionExample">
                            <div class="accordion-body px-0">
                                <div class="row mx-auto justify-content-center w-100">
                                    <div class="col-12 col-md-5">
                                        <p class="mb-0 text-primary"><strong>Message : </strong><span class="text-dark">{{data.message}}</span></p>
                                        <p class="mb-0 text-primary"><strong>Created At : </strong><span class="text-dark">{{data.createdAt}}</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{>cdnscript}}
    {{>cartjs}}


</body>

</html>